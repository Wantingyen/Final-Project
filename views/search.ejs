<div id="Search" class="d-flex" style="margin-top: 100px;">
  <div class="container">

<h1 class="pb-4">Search Results</h1>

  <div class="row row-cols-1 g-4">
    <% if(recipe != '') { %>
      <% recipe.forEach(function(recipe, index){ %>
        <div class="col">
          <div class="card h-100">
            <a href="/recipe/<%= recipe._id %>">
              <img src="/img/<%= recipe.image %>" class="card-img-top" alt="<%= recipe.name %>">
            </a>  
            <div class="card-body">
              <a href="/recipe/<%= recipe._id %>" style="text-decoration:none; color:black;"><h5><%= recipe.name %></h5></a>
            </div>
          </div>
        </div>
      <% }) %>
    <% } else { %>
      <div class="serch">
        <h2 style="text-align:center">No Items Found</h2>
      </div>
    <% } %>
  </div>


